<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="typeface" format="enum">
        <enum name="roboto_regular" value="0" />
        <enum name="roboto_bold" value="1" />
        <enum name="roboto_italic" value="2" />
        <enum name="roboto_bold_italic" value="3" />
        <enum name="caviar_dreams" value="4" />
        <enum name="caviar_dreams_bold" value="5" />
        <enum name="caviar_dreams_italic" value="6" />
        <enum name="caviar_dreams_bold_italic" value="7" />
    </attr>

    <declare-styleable name="CaviarTextView">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CaviarEditText">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CaviarButton">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CaviarRadioButton">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="MaterialSpinner">
        <attr name="typeface" />
    </declare-styleable>

    <attr name="direction" format="enum">
        <enum name="north" value="0" />
        <enum name="south" value="1" />
        <enum name="east" value="2" />
        <enum name="west" value="3" />
    </attr>

    <declare-styleable name="TriangleShape">
        <attr name="direction" />
    </declare-styleable>

    <attr name="mode" format="enum">
        <enum name="text" value="0" />
        <enum name="button" value="1" />
        <enum name="simple" value="2" />
    </attr>

    <declare-styleable name="Spinner">
        <attr name="mode" />
        <attr name="typeface"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="integer"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="backgroundDrawable" format="integer"/>
        <attr name="visibleItems" format="integer"/>
        <attr name="itemsOverSpinner" format="integer"/>
        <attr name="itemTextColor" format="color"/>
        <attr name="itemTextSize" format="integer"/>
        <attr name="itemSelectedColor" format="color"/>
        <attr name="itemSelectedDrawable" format="integer"/>
        <attr name="listBackgroundColor" format="color"/>
        <attr name="listBackgroundDrawable" format="integer"/>
        <attr name="arrowColor" format="color"/>
        <attr name="lineColor" format="color"/>
    </declare-styleable>

</resources>
