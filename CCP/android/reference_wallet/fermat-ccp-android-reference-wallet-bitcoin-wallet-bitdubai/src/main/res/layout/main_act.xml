<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/fragment_container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1173aa"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_contact_search"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <EditText

            android:id="@+id/search_view"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:layout_toLeftOf="@+id/clear_search_image_button"
            android:layout_toStartOf="@+id/clear_search_image_button"
            android:hint="@string/search_hint"
            android:textColorHint="#fff"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:singleLine="true"
            />

        <ImageButton

            android:id="@+id/clear_search_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/search_view"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/search_view"
            android:src="@drawable/ic_action_cancel_grey"
            android:contentDescription="@string/clear_text_button"
            android:visibility="gone"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/contacts_container"
        >


        <include layout="@layout/loading_empty_view"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.bitdubai.reference_niche_wallet.bitcoin_wallet.common.Views.views_contacts_fragment.PinnedHeaderListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollingCache="false"
                />

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/multiple_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:fab_addButtonColorNormal="#fff"
                app:fab_addButtonColorPressed="#0f0"
                app:fab_addButtonPlusIconColor="#66ff0000"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                app:fab_addButtonStrokeVisible="true"
                app:fab_icon="@drawable/btn_contact_selector"
                app:fab_labelStyle="@style/menu_labels_style"
                android:layout_marginEnd="16dp">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_intra_user"
                    app:fab_colorNormal="#fff"
                    app:fab_size="mini"
                    app:fab_icon="@drawable/ic_contact_float_new_contact"
                    app:fab_title="Crypto User"
                    app:backgroundTintMode="multiply"
                    app:fab_colorPressed="#0f0"/>

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_colorNormal="#fff"
                    app:fab_size="mini"
                    android:id="@+id/btn_extra_user"
                    app:fab_title="Extra User"
                    app:fab_icon="@drawable/ic_contact_float_new_contact_blue"
                    app:fab_colorPressed="#0f0"/>

            </com.getbase.floatingactionbutton.FloatingActionsMenu>



        </RelativeLayout>





    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/empty_view"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_contact_empty"
            />


        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            app:typeface="ROBOTO_REGULAR"
            android:text="Click me to\nsearch contacts!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_black_light"
            />

    </LinearLayout>





</LinearLayout>