<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:background="#ab31a4"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mati_profile"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imageView_contact"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="7dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_toRightOf="@+id/imageView_contact">

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 btc"
            />

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matias Furszyfer"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:paddingRight="5dp"

        >

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conference ticket"
            />

        <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09 ago 2015"
            />


    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textSize="10sp"
        android:id="@+id/btn_accept_request"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refuse"
        android:textSize="10sp"
        android:id="@+id/btn_refuse_request"
        android:layout_toLeftOf="@id/btn_accept_request"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:background="@null"/>



</RelativeLayout>