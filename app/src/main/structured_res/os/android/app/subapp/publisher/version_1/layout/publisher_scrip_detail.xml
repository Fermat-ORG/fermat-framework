<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:background="@drawable/background_tabs_diagonal_inverted">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/user_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20M"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView android:id="@+id/user_target"
                android:layout_width="match_parent"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="20M 100%"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView android:id="@+id/users_reached"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20M 100%"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/text_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView android:id="@+id/text_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Target"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView android:id="@+id/text_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Received"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:orientation="horizontal">
            <TextView android:id="@+id/views_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="12M 60%"
                android:layout_weight="1"/>
            <TextView android:id="@+id/used_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7M 35%"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_weight="1"/>
            <TextView android:id="@+id/cashed_out_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="900K 4.5%"
                android:textStyle="normal"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:gravity="center"/>
            <TextView android:id="@+id/sold_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="normal"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:text="1.5M 7.5%"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                android:text="Seen"
                android:layout_weight="1"/>
            <TextView android:id="@+id/text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Used"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_weight="1"/>
            <TextView android:id="@+id/text_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cashed out"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>
            <TextView android:id="@+id/text_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:text="Sold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/shops_amount"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="120"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/acepting_shops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="90"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="14sp"/>
            <TextView android:id="@+id/received_scrips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$28M"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/text_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Shops"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                android:layout_weight="1"/>
            <TextView android:id="@+id/text_9"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:textStyle="normal"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:text="Acepting shops"/>
            <TextView android:id="@+id/text_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Received in shops"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="normal"
                android:layout_weight="1"/>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>