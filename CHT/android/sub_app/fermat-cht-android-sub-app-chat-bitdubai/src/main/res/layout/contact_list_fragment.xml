<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/cht_list_divider"
            />
        <LinearLayout
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:isScrollContainer="true"
            android:verticalScrollbarPosition="right"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cht_icon_no_contacts"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cht_no_contacts"
                android:id="@+id/nodatalabel"
                android:textColor="@color/cht_no_contacts"
                android:textStyle="normal"
                android:textSize="12pt"
                android:layout_below="@+id/nodata"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cht_contact_list_select1"
                android:id="@+id/nochatssubtitle"
                android:textColor="#D1D3D4"
                android:textStyle="normal"
                android:textSize="7pt"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/nodatalabel"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cht_contact_list_select2"
                android:id="@+id/nochatssubtitle1"
                android:textColor="#D1D3D4"
                android:textStyle="normal"
                android:textSize="7pt"
                android:textAlignment="center"
                android:layout_below="@+id/nochatssubtitle"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cht_contact_list_select3"
                android:id="@+id/nochatssubtitle2"
                android:textColor="#D1D3D4"
                android:textStyle="normal"
                android:textSize="7pt"
                android:textAlignment="center"
                android:layout_below="@+id/nochatssubtitle1"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>