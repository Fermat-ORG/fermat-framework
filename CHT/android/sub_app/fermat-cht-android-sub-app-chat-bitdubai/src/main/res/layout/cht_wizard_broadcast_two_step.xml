<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ADD BROADCAST LIST RECIPIENTS"
            android:id="@+id/textView"
            android:drawableEnd="@android:drawable/btn_plus"
            android:textColor="#808080"
            android:singleLine="false"
            android:textAlignment="center"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/editTextNameBroadcast"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="#000"
            android:id="@+id/editTextContacts"
            android:hint="Type contact name"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:textColorHint="#808080" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="BROADCAST SIMPLE"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="#000"
            android:id="@+id/editTextNameBroadcast"
            android:hint="Type name for the broadcast"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:textColorHint="#808080" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            style="@style/ContactListView"
            android:textColor="#000"
            android:cacheColorHint="#000"
            android:layout_below="@+id/editTextContacts"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>