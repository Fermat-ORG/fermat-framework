<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:src="@drawable/cbc_geolocation_light_icon"
        />

    <TextView
        android:id="@+id/cbc_state_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/location_icon"
        android:layout_toRightOf="@id/location_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/cbc_color_gray"
        tools:text="State"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cbc_country_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/cbc_state_search"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@id/location_icon"
        android:layout_toRightOf="@id/location_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/cbc_color_gray_light"
        android:textSize="18sp"
        tools:text="Country"/>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/cbc_country_search"
        android:layout_marginTop="8dp"
        android:background="@color/color_gray_light"/>

</RelativeLayout>